<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    style="@style/PatrolUploadItemOuterContainerStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_tv"
        android:layout_width="@dimen/patrol_upload_text_width"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp">
        <!--日期框 -->
        <TextView
            android:id="@+id/tv_"
            style="@style/PatrolUploadKeyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文本域" />


    </LinearLayout>
    <TextView
        android:id="@+id/tv_requiredTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="-4dp"
        android:layout_toRightOf="@id/ll_tv"
        android:gravity="center"
        android:text="*"
        android:textColor="@android:color/holo_red_light"
        android:textSize="@dimen/text_size_third" />

    <Button
        android:id="@+id/btn_datepicker"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@id/ll_tv"
        android:background="@drawable/button_shape"
        android:clickable="true"
        android:drawableRight="@mipmap/calendar"
        android:paddingRight="15dp"
        android:text="日期"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/ll_tv"
        android:clickable="true"
        android:text="日期"
        android:textSize="15sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et_"
        style="@style/PatrolUploadETItemStyle"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ll_tv"
        android:clickable="true"
        android:text="日期"
        android:visibility="gone" />


</RelativeLayout>