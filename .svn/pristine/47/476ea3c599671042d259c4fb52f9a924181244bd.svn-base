<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="请选择操作："
        android:textColor="@color/dust_grey"
        android:textSize="@dimen/text_size_second" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/grey_dot_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_add_new_data"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginRight="24dp"
            android:src="@mipmap/ic_add_new_data" />

        <ImageView
            android:id="@+id/iv_amend_data"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@mipmap/ic_amend_data" />
    </LinearLayout>

</LinearLayout>