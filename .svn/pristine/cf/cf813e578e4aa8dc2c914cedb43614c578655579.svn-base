<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <com.augurit.agmobile.gzps.common.widget.TextItemTableItem
                android:id="@+id/text_item_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:editTextMaxLength="15"
                app:textViewName="一级排水户名称*" />

            <com.augurit.agmobile.gzps.common.widget.TextItemTableItem
                android:id="@+id/text_item_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:editTextMaxLength="15"
                app:textViewName="一级排水户门牌*" />


            <com.augurit.agmobile.gzps.common.widget.TextItemTableItem
                android:id="@+id/text_item_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:editTextMaxLength="15"
                app:editTextHint="如：中华广场7楼B1"
                app:textViewName="二级排水户位置*" />

            <com.augurit.agmobile.gzps.common.widget.TextItemTableItem
                android:id="@+id/text_item_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:editTextMaxLength="15"
                app:editTextHint="如：肯德基"
                app:textViewName="二级排水户名称*" />

            <com.augurit.agmobile.gzps.common.widget.TextItemTableItem
                android:id="@+id/text_item_five"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:editTextMaxLength="15"
                app:editTextHint="如：555号"
                app:textViewName="一级排水户ID*" />
        <LinearLayout
            android:id="@+id/botttom_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_rectangle_with_shadow"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:layout_marginTop="10dp">

                <com.augurit.agmobile.gzps.common.widget.TextFieldTableItem
                    android:id="@+id/text_item_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fieldtextViewName="上报说明" />

            </LinearLayout>
            <com.augurit.agmobile.gzps.common.widget.TextItemTableItem
                android:id="@+id/text_item_seven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textViewName="上报人：" />


            <com.augurit.agmobile.gzps.common.widget.TextItemTableItem
                android:id="@+id/text_item_eight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textViewName="上报单位：" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>