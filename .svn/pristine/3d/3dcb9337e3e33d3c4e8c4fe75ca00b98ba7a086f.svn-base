<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <stroke android:width="1dp" android:color="#116FF0" />
            <solid android:color="#116FF0" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="#116FF0" />
                    <solid android:color="#FFF" />
                </shape>
            </item>
            <item android:bottom="1.5dp" android:left="0.7dp" android:right="0.7dp" android:top="1.5dp">
                <shape>
                    <stroke android:width="1dp" android:color="#FFF" />
                    <solid android:color="#FFF" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>