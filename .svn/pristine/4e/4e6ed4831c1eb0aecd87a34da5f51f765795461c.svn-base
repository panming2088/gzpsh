<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_marginLeft="@dimen/list_symbol_margin_left"
        android:layout_marginRight="@dimen/list_symbol_margin_right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dnl_area_item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_second"/>

        <RelativeLayout
            android:id="@+id/dnl_area_item_dnl"
            android:layout_width="@dimen/list_item_height"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="@dimen/top_icon_size"
                android:layout_height="@dimen/top_icon_size"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/list_spacing_horizontal"
                android:src="@mipmap/dnl_btn"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>