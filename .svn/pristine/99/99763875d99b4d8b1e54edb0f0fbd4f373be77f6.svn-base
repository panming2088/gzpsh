<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="1px"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APP安装率统计"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="1px"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:padding="1dp"
                android:background="@drawable/corner_green_bg"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/patrol_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="一线人员统计"
                    android:background="@color/colorPrimary"
                    android:textColor="#fff"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/lead_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="管理层统计"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"/>

            </LinearLayout>
            <GridView
                android:id="@+id/gv_area"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="5dp"
                android:horizontalSpacing="6dp"
                android:numColumns="5"
                android:padding="3dp"
                android:verticalSpacing="6dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/color_write_stroke"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/area_all_count_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总人数"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/all_install_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="23sp"
                        android:textStyle="bold"/>

                </LinearLayout>
                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#999"/>
                <LinearLayout
                    android:id="@+id/install_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已安装"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/install_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="@color/color_already_installed"
                        android:textSize="23sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#999"/>
                <LinearLayout
                    android:id="@+id/no_install_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未安装"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/no_install_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="23sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
            <WebView
                android:id="@+id/chart_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>