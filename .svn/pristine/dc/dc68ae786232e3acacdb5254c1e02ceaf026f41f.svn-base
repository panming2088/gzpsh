<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/agmobile_white_dark"
    style="@style/PatrolUploadItemOuterContainerStyle">

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/patrol_upload_view_margin_left"
        android:background="@color/agmobile_white"
        >

        <!--文本域 -->
        <TextView
            android:id="@+id/tv_"
            style="@style/PatrolUploadKeyTextStyle"
            android:text="文本域"
            />
        <TextView
            android:id="@+id/tv_requiredTag"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="*"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/text_size_third"/>
        <TextView
            android:id="@+id/txt_mark"
            style="@style/PatrolUploadKeyTextStyle"
            android:layout_alignParentRight="true"
            android:gravity="left"
            android:text="(字)"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_marginLeft="2dp"
            android:textSize="12sp"
            android:paddingRight="8dp"
            android:textColor="@android:color/holo_red_light"/>
        <TextView
            android:id="@+id/tv_size"
            style="@style/PatrolUploadKeyTextStyle"
            android:layout_toStartOf="@+id/txt_mark"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:paddingRight="8dp"
            android:text="10/100"
            android:textSize="12sp"
            android:textColor="@android:color/holo_red_light"/>

        <EditText
            android:id="@+id/et_"
            style="@style/PatrolUploadETItemStyle"
            android:layout_below="@id/tv_"
            android:enabled="true"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:minLines="8"
            android:scrollbars="vertical"
            />
        >
        <!--   android:background="@android:drawable/edit_text"-->


    </RelativeLayout>
</LinearLayout>