                        <RadioButton
                            android:id="@+id/rb_full"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="满管" />

                        <RadioButton
                            android:id="@+id/rb_3_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3/4管"
                            />

                        <RadioButton
                            android:id="@+id/rb_2_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2/4管"
                            />

                        <RadioButton
                            android:id="@+id/rb_1_4"
