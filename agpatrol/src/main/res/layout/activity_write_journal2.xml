                    android:visibility="gone"/>

                <com.augurit.agmobile.gzps.common.widget.TextItemTableItem
                    android:id="@+id/textitem_road"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:textViewName="所在道路"
                    android:visibility="gone"/>


