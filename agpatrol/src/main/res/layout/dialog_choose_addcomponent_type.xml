<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="请选择新增的设施类型："
        android:textColor="@color/dust_grey"
        android:textSize="@dimen/text_size_second" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/grey_dot_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_add_yinjin"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginRight="24dp"
            android:src="@mipmap/ic_yinjing2" />

        <ImageView
            android:id="@+id/iv_add_yushuikou"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@mipmap/ic_yushuikou" />
    </LinearLayout>

</LinearLayout>