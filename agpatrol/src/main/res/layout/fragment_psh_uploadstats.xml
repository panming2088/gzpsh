                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/date_picker" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:text="至"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btn_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shp_green_outline_bg"
                        android:gravity="center"
                        android:paddingRight="12dp"
                        android:stateListAnimator="@null"
                        android:text="2016-11-10" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/date_picker" />
                </RelativeLayout>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_shape"
                    android:gravity="center"
                    android:stateListAnimator="@null"
                    android:text="重置"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/stats_time_ok"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.55"
                    android:background="@drawable/button_shape_time_stamp"
                    android:gravity="center"
                    android:stateListAnimator="@null"
                    android:text="确定时段"
                    android:textColor="@color/agmobile_white" />
            </LinearLayout>

            <LinearLayout
