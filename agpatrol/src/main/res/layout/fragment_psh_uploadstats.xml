                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <RelativeLayout
