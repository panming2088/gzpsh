<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout android:id="@+id/drawer_layout"
                                        xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/primary_background_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.augurit.agmobile.gzps.common.widget.NoScrollViewPager
                android:id="@+id/mViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <com.augurit.agmobile.gzps.common.widget.PatrolAlphaTabsIndicator
                android:id="@+id/alphaIndicator"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/agmobile_white"
                android:elevation="6dp"
                android:orientation="horizontal">

                <com.augurit.agmobile.gzps.common.widget.PatrolAlphaTagView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:tabIconNormal="@mipmap/ic_home_communicate_normal"
                    app:tabIconSelected="@mipmap/ic_home_communication_pressed"
                    app:tabTextSize="13sp"
                    app:textColorNormal="#999999"
                    app:textColorSelected="@color/agmobile_blue"/>

<!--                <com.augurit.agmobile.gzps.common.widget.PatrolAlphaTagView-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="40dp"-->
<!--                    android:layout_gravity="center_vertical"-->
<!--                    android:layout_weight="1"-->
<!--                    app:tabIconNormal="@mipmap/home_ic_work_stataion_normal"-->
<!--                    app:tabIconSelected="@mipmap/home_ic_work_station_pressed"-->
<!--                    app:tabTextSize="12sp"-->
<!--                    app:textColorNormal="#999999"-->
<!--                    app:textColorSelected="@color/agmobile_blue"/>-->

                <com.augurit.agmobile.gzps.common.widget.PatrolAlphaTagView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:tabIconNormal="@mipmap/home_ic_daily_work_normal"
                    app:tabIconSelected="@mipmap/home_ic_daily_work_pressed"
                    app:tabTextSize="12sp"
                    app:textColorNormal="#999999"
                    app:textColorSelected="@color/agmobile_blue"/>


                <com.augurit.agmobile.gzps.common.widget.PatrolAlphaTagView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:tabIconNormal="@mipmap/ic_home_statistic_normal"
                    app:tabIconSelected="@mipmap/ic_home_statistic_pressed"
                    app:tabTextSize="13sp"
                    app:textColorNormal="#999999"
                    app:textColorSelected="@color/agmobile_blue"/>

                <!--
                <Button
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"/>
                    -->


                <com.augurit.agmobile.gzps.common.widget.PatrolAlphaTagView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:tabIconNormal="@mipmap/ic_home_me_normal"
                    app:tabIconSelected="@mipmap/ic_home_me_pressed"
                    app:tabTextSize="13sp"
                    app:textColorNormal="#999999"
                    app:textColorSelected="@color/agmobile_blue"/>
            </com.augurit.agmobile.gzps.common.widget.PatrolAlphaTabsIndicator>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/progress_linearlayout"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/agmobile_white"
        android:orientation="vertical"/>
</android.support.v4.widget.DrawerLayout>