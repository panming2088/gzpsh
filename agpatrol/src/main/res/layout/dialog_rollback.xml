<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/circular_corner_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_advise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            android:text="填写回退意见" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_rectangle_with_shadow"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_size"
                style="@style/PatrolUploadKeyTextStyle"
                android:layout_gravity="right"
                android:gravity="right"
                android:paddingRight="8dp"
                android:text="0/100"
                android:textColor="@android:color/holo_red_light"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/textfield_content"
                style="@style/PatrolUploadETItemStyle"
                android:layout_marginRight="@dimen/patrol_upload_view_margin_left"
                android:enabled="true"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:maxLength="100"
                android:maxLines="5"
                android:minLines="5"
                android:scrollbars="vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="6dp">

            <CheckBox
                android:textSize="15sp"
                android:id="@+id/cb_is_send_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送短信通知对方" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"

            android:layout_marginRight="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="40dp"
                android:background="@drawable/radio_bg"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="取消"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/radio_bg"
                android:text="提交"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#fff" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>