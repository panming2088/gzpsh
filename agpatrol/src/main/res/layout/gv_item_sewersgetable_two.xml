<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="com.augurit.agmobile.gzpssb.GVItemSewerageTableData">

        <variable
            name="tableinfo"
            type="com.augurit.agmobile.gzpssb.bean.ItemSewerageItemInfo">

        </variable>
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_area_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/corner_color_write"
                android:gravity="center"
                android:text="@{tableinfo.name}"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_selected"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:src="@mipmap/ic_selected"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>
</layout>