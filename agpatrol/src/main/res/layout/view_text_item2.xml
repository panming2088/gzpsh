<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:weightSum="2"
    android:orientation="horizontal">

    <!--<item name="android:layout_width">@dimen/patrol_upload_text_width</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">@dimen/patrol_upload_view_margin_left</item>
    <item name="android:paddingTop">4dp</item>
    <item name="android:textSize">@dimen/partrol_upload_text_size</item>
    <item name="android:textColor">#FF666666</item>-->

    <LinearLayout
        android:id="@+id/ll_tv1"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:paddingTop="4dp"
        android:layout_weight="0.9"
        android:clickable="false"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/patrol_upload_view_margin_left"
        >
        <!--文本框 -->
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接驳管道管径(mm) "
            android:layout_gravity="center_vertical"
            android:textColor="#FF666666"
            android:textSize="@dimen/partrol_upload_text_size" />
        <TextView
            android:id="@+id/tv_requiredTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="0dp"
            android:text="*"
            android:visibility="gone"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/text_size_third" />
    </LinearLayout>


   <!-- <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@drawable/spinner_background</item>
    <item name="android:popupBackground">#DFFFFFFF</item>-->

    <EditText
        android:id="@+id/et_1"
        android:layout_width="0dp"
        android:paddingLeft="4dp"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:textSize="15sp"
        android:textColor="@color/dust_grey"
        android:layout_gravity="left|center_vertical"
        android:clickable="true"/>

</LinearLayout>
