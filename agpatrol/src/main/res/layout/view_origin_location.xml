<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="false">

    <LinearLayout
        android:id="@+id/ll_tv1"
        style="@style/PatrolUploadKeyTextStyle"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:clickable="false">
        <!--文本框 -->
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写人"
            android:textColor="#FF666666"
            android:textSize="@dimen/partrol_upload_text_size" />
    </LinearLayout>

    <LinearLayout
        style="@style/PatrolUploadETItemStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ll_tv1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp">

            <EditText
                android:id="@+id/et_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:clickable="true"
                android:hint=""
                android:textSize="15sp"
                android:textColor="@color/dust_grey" />

            <Button
                android:id="@+id/btn_show_location"
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/radio_bg"
                android:text="显示"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_second" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="#f5f5f5"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <!--android:textColor="@drawable/sel_text_item_color"-->
</RelativeLayout>