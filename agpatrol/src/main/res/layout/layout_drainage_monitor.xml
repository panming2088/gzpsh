<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout android:id="@+id/fl_top"
        android:layout_width="match_parent"
        android:layout_height="36dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:src="@drawable/line_gray" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/sv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="120dp"
            android:layout_weight="1"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">
                    <LinearLayout android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_rect_10round_blue"
                        android:padding="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView android:id="@+id/tv_an"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="23"
                                android:textSize="20sp"
                                android:textColor="#3377FF"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="mg/L"
                                android:textSize="15sp"
                                android:textColor="#3377FF"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="氨氮浓度"
                            android:textSize="15sp"
                            android:textColor="#555658"/>
                    </LinearLayout>
                    <Space
                        android:layout_width="15dp"
                        android:layout_height="1dp"/>
                    <LinearLayout android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_rect_10round_blue"
                        android:padding="15dp">
                        <TextView android:id="@+id/tv_handling_sum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="23"
                            android:textSize="20sp"
                            android:textColor="#3377FF"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="处理中问题"
                            android:textSize="15sp"
                            android:textColor="#555658"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">
                    <LinearLayout android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_rect_10round_blue"
                        android:padding="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="接驳井总数："
                                android:textSize="15sp"
                                android:textColor="#555658"/>
                            <TextView android:id="@+id/tv_jbj"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="23"
                                android:textSize="15sp"
                                android:textColor="#111111"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="已监管："
                                android:textSize="15sp"
                                android:textColor="#555658"/>
                            <TextView android:id="@+id/tv_jbj_yjg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="23"
                                android:textSize="15sp"
                                android:textColor="#22AC38"/>
                        </LinearLayout>
                    </LinearLayout>
                    <Space
                        android:layout_width="15dp"
                        android:layout_height="1dp"/>
                    <LinearLayout android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_rect_10round_blue"
                        android:padding="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="接户井总数："
                                android:textSize="15sp"
                                android:textColor="#555658"/>
                            <TextView android:id="@+id/tv_jhj"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="23"
                                android:textSize="15sp"
                                android:textColor="#111111"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="已监管："
                                android:textSize="15sp"
                                android:textColor="#555658"/>
                            <TextView android:id="@+id/tv_jhj_yjg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="23"
                                android:textSize="15sp"
                                android:textColor="#22AC38"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <include android:id="@+id/ll_unit_name"
                    layout="@layout/item_unit_info"/>

                <include android:id="@+id/ll_address"
                    layout="@layout/item_unit_info"/>

                <include android:id="@+id/ll_type"
                    layout="@layout/item_unit_info"/>

                <FrameLayout android:id="@+id/fl_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <include android:id="@+id/ll_unit_code"
                            layout="@layout/item_unit_info"/>

                        <include android:id="@+id/ll_unit_size"
                            layout="@layout/item_unit_info"/>

                        <include android:id="@+id/ll_unit_area"
                            layout="@layout/item_unit_info"/>

                        <include android:id="@+id/ll_unit_town"
                            layout="@layout/item_unit_info"/>

                        <include android:id="@+id/ll_ywfl"
                            layout="@layout/item_unit_info"/>

                        <include android:id="@+id/ll_dbcj"
                            layout="@layout/item_unit_info"/>

                        <include android:id="@+id/ll_date"
                            layout="@layout/item_unit_info"/>

                        <include android:id="@+id/ll_owner"
                            layout="@layout/item_unit_info_2"/>

                        <include android:id="@+id/ll_wf"
                            layout="@layout/item_unit_info_2"/>

                        <include android:id="@+id/ll_manager"
                            layout="@layout/item_unit_info_2"/>

                        <include android:id="@+id/ll_monitor"
                            layout="@layout/item_unit_info_2"/>
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <LinearLayout android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_gravity="bottom"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView android:id="@+id/tv_upload_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:drawableLeft="@mipmap/ic_clock"
                android:drawablePadding="5dp"
                tools:text="蔡震辰 于2020-12-20 新增 该设施"
                android:textSize="15sp"
                android:textColor="#1F81F2">
            </TextView>

            <LinearLayout android:id="@+id/ll_operation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <Button android:id="@+id/btn_edit_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_blue"
                    android:layout_gravity="center_horizontal"
                    android:text="信息编辑"
                    android:textSize="16sp"
                    android:textColor="@color/white"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="1dp"/>

                <Button android:id="@+id/btn_monitor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_blue"
                    android:layout_gravity="center_horizontal"
                    android:text="开始监管"
                    android:textSize="16sp"
                    android:textColor="@color/white"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="1dp"/>

                <Button android:id="@+id/btn_submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_blue"
                    android:layout_gravity="center_horizontal"
                    android:text="完成监管"
                    android:textSize="16sp"
                    android:textColor="@color/white"/>

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>

