<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:alpha="0.8">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layerq_lylr_btnbg"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/dnl_btn_tool_global"
            android:layout_width="@dimen/geometry_tool_btn_size"
            android:layout_height="@dimen/geometry_tool_btn_size"
            android:background="@drawable/layerq_sel_ib"
            android:scaleType="fitCenter"
            android:padding="@dimen/map_btn_padding"
            android:src="@mipmap/common_ic_global_normal"/>

        <View
            android:layout_width="1px"
            android:layout_height="@dimen/layerquery_tool_divider_size"
            android:layout_margin="3dp"
            android:background="@color/material_grey_400"/>


        <ImageButton
            android:id="@+id/dnl_btn_tool_square"
            android:layout_width="@dimen/geometry_tool_btn_size"
            android:layout_height="@dimen/geometry_tool_btn_size"
            android:background="@drawable/layerq_sel_ib"
            android:scaleType="fitCenter"
            android:padding="@dimen/map_btn_padding"
            android:src="@mipmap/common_ic_rectangle_normal"/>

        <View
            android:layout_width="1px"
            android:layout_height="@dimen/layerquery_tool_divider_size"
            android:layout_margin="3dp"
            android:background="@color/material_grey_400"/>

        <ImageButton
            android:id="@+id/dnl_btn_tool_area"
            android:layout_width="@dimen/geometry_tool_btn_size"
            android:layout_height="@dimen/geometry_tool_btn_size"
            android:background="@drawable/layerq_sel_ib"
            android:scaleType="fitCenter"
            android:padding="@dimen/map_btn_padding"
            android:src="@mipmap/common_ic_circle_normal"/>

        <View
            android:layout_width="1px"
            android:layout_height="@dimen/layerquery_tool_divider_size"
            android:layout_margin="3dp"
            android:background="@color/material_grey_400"/>

        <ImageButton
            android:id="@+id/dnl_btn_tool_clear"
            android:layout_width="@dimen/geometry_tool_btn_size"
            android:layout_height="@dimen/geometry_tool_btn_size"
            android:background="@drawable/layerq_sel_ib"
            android:scaleType="fitCenter"
            android:padding="@dimen/map_btn_padding"
            android:src="@mipmap/layerq_ic_clear"/>
    </LinearLayout>

</LinearLayout>