<?xml version="1.0" encoding="utf-8"?>
<!--android:background="?android:attr/selectableItemBackground"-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_sel_recycleritem"
    android:orientation="vertical"
    android:layout_marginLeft="16dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_divider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height">
        <!--android:background="?android:attr/selectableItemBackground"-->

        <ImageView
            android:id="@+id/iv_layerdir_holder_icon"
            android:layout_width="@dimen/bottomsheet_item_imageview_size"
            android:layout_height="@dimen/bottomsheet_item_imageview_size"
            android:src="@mipmap/common_ic_folder"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/node_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_layerdir_holder_icon"
            android:layout_marginLeft="@dimen/bottomsheet_item_margin_right"
            android:text="子图层"
            android:textColor="@color/agmobile_black"
            android:textSize="@dimen/text_size_second"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/list_divider"
        android:visibility="gone"/>
</LinearLayout>