<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_sel_recycleritem"
    android:orientation="vertical"
    android:paddingLeft="16dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height">
        <!--android:background="?android:attr/selectableItemBackground"-->

        <ImageView
            android:id="@+id/iv_layerdir_holder_icon"
            android:layout_width="@dimen/bottomsheet_item_imageview_size"
            android:layout_height="@dimen/bottomsheet_item_imageview_size"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_component" />

        <TextView
            android:id="@+id/node_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/bottomsheet_item_margin_right"
            android:layout_toRightOf="@id/iv_layerdir_holder_icon"
            android:text="子图层"
            android:textColor="@color/agmobile_black"
            android:textSize="@dimen/text_size_second" />

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="详情"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_second" />
    </RelativeLayout>

</LinearLayout>