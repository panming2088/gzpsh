<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_roundrectangle_green_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <!--标题-->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="图例"
            android:textColor="@color/agmobile_white"
            android:textSize="@dimen/text_size_first" />

        <ImageView
            android:id="@+id/iv_mark_closeLegend"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:src="@mipmap/common_ic_close_white" />
    </RelativeLayout>


    <com.augurit.am.cmpt.widget.loadinglayout.ProgressLinearLayout
        android:id="@+id/progressLinearlayout_legend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mark_title_bg">

        <LinearLayout
            android:id="@+id/ll_legend_tree_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </com.augurit.am.cmpt.widget.loadinglayout.ProgressLinearLayout>

</LinearLayout>