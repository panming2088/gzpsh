<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:maxLength="16"
            android:text="名称："/>

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/common_bg_edittext"
            android:padding="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="内容："/>

        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:minLines="3"
            android:background="@drawable/common_bg_edittext"
            android:padding="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="授权："/>

        <RadioGroup
            android:id="@+id/rg_auth_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="授权"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_auth_type_pri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:checked="true"
                android:text="私人" />

            <RadioButton
                android:id="@+id/rb_auth_type_pub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公开" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="visible"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/cancel"
            android:layout_width="90dp"
            android:layout_height="28dp"
            style="@style/AGMobile.Widget.Button.Positive"
            android:text="取消"/>

        <Button
            android:id="@+id/ok"
            android:layout_width="90dp"
            android:layout_height="28dp"
            style="@style/AGMobile.Widget.Button.Positive"
            android:layout_marginLeft="20dp"
            android:text="确定"/>

    </LinearLayout>

</LinearLayout>