<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
          android:enterFadeDuration="100"
          android:exitFadeDuration="@android:integer/config_mediumAnimTime">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/agmobile_white_dark"/>
            <stroke android:color="@color/agmobile_blue" android:width="1dp"/>
            <corners android:radius="@dimen/dialog_btn_radius"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/agmobile_grey_0"/>
            <stroke android:color="@color/agmobile_blue" android:width="1dp"/>
            <corners android:radius="@dimen/dialog_btn_radius"/>
        </shape>
    </item>
</selector>